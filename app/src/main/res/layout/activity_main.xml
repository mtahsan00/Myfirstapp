<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mtashan.cool.MainActivity"
    android:background="#00ff00">

    <EditText
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/Hey"
        android:background="#d3cccc"
        android:inputType="number"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/Level"
        android:background="#d3cccc"
        android:inputType="number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        />


    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Guess!"
        android:textStyle="bold"
        android:id="@+id/Check"
        android:onClick="clickFunction"
        android:background = "@drawable/layer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:textColor="#000000"
        />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:id="@+id/Checkf"
        android:onClick="levelselect"
        android:background = "@drawable/layer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="250dp"
        android:textColor="#000000"
        android:text="Select!" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:text="A random Number has been generated, figure it out!"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:typeface="serif"
        android:textStyle="bold"
        android:textSize="25dp"
        />

    <TextView
        android:layout_width="190dp"
        android:layout_height="35dp"
        android:text="Enter level 1,2,or 3"
        android:id="@+id/levelselect"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="100dp"
        android:textColor="#000000"

        />



</RelativeLayout>

